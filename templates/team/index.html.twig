{% block body %}
    <div class="container border-bottom pt-5 pb-5">
        <div class="row justify-content-center">
            <div class="col-md-6 col-10 card profile-card event-paragraph">
                <div class="card-body">
                    <h2 class="card-text text-justify mb-5">Notre Histoire</h2>
                    <p class="text-justify">Quibus occurrere bene pertinax miles explicatis ordinibus parans hastisque
                        feriens scuta qui habitus
                        iram pugnantium concitat et dolorem proximos iam gestu terrebat sed eum in certamen alacriter
                        consurgentem revocavere ductores rati intempestivum anceps subire certamen cum haut longe muri
                        distarent, quorum tutela securitas poterat in solido locari cunctorum.
                        Omitto iuris dictionem in libera civitate contra leges senatusque consulta; caedes relinquo;
                        libidines praetereo, quarum acerbissimum extat indicium.
                    </p>
                </div>
            </div>
            <div class="col-md-6 col-10 card-img-block">
                <div class="card-img-block-top">
                    <img src="{{ asset('build/circus-history.jpg') }}"
                         class="card-img-top-show"
                         alt="representation-picture">
                </div>
            </div>
        </div>
    </div>

    <h2 class="text-center representation-title pt-5 pb-5">Nos artistes</h2>

    <div class="container search-section pt-5 pb-5">
        <div class="row">
            <div class="col-12">
                {{ form_start(form) }}
                {{ form_widget(form) }}
                <div class="d-flex justify-content-center">
                    <button class="btn btn-outline-danger">Rechercher</button>
                </div>
                {{ form_end(form) }}
            </div>
        </div>
    </div>

    <div class="container pb-5 mb-5">
        <div class="row justify-content-center">
            {% for artist in artists %}

                <div class="col-sm-3 m-4">
                    <div class="profile-card-team">
                        <div class="profile-img">
                            <img src="{% if artist.imageName is empty %}
                    {{ asset('build/acrobat.jpg') }}
                      {% else %}
                    {{ vich_uploader_asset(artist, 'imageFile') }}
                    {% endif %}"
                                 alt="{{ artist.firstname }}" class="Team-picture w-100" alt="Team Image">
                        </div>
                        <div class="profile-content">
                            <h2 class="title">{{ artist.firstname }}
                                <span>{{ artist.birthday ? artist.birthday|date('d/m/Y') : '' }}</span>
                                <span>{{ artist.role }}</span>
                            </h2>
                        </div>
                    </div>
                </div>

            {% endfor %}
        </div>
    </div>
{% endblock %}
