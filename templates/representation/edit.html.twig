{% extends 'layout_admin.html.twig' %}
{% form_theme form 'bootstrap_4_horizontal_layout.html.twig' %}
{% block title %}Modifier une représentation{% endblock %}

{% block body %}
    <div class="mt-5 container-xl container-lg container-fluid">
        <h1 class="mt-3 mb-4 text-center">Modifier une représentation</h1>
        <div class="border p-4">
            {{ include('representation/_form.html.twig', {'button_label': 'Modifier'}) }}
        </div>
        <div class="row justify-content-between">
            <div class="col col-lg-4">
                <a href="{{ path('admin_representation_index') }}" class="btn btn-dark m-5">Liste des représentations</a>
            </div>
            <div class="col col-lg-3">
                {{ include('representation/_delete_form.html.twig') }}
            </div>
        </div>
    </div>
{% endblock %}
