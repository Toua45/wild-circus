{% extends 'layout_admin.html.twig' %}

{% block title %}Menu des univers{% endblock %}

{% block body %}
<div class="container">
    <h1 class="text-center mt-5 mb-5">Menu des univers</h1>
    <a href="{{ path('admin_category_new') }}" class="btn btn-outline-primary mb-5">Créer</a>

    <table class="table">
        <thead>
            <tr>
                <th>Nom</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for category in categories %}
            <tr>
                <td>{{ category.name }}</td>
                <td>
                    <a href="{{ path('admin_category_show', {'id': category.id}) }}" class="btn btn-outline-primary">Aperçu</a>
                    <a href="{{ path('admin_category_edit', {'id': category.id}) }}" class="btn btn-outline-primary">Modifier</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
</div>
{% endblock %}
