{% extends 'layout_admin.html.twig' %}

{% block title %}Artist{% endblock %}

{% block body %}
    <div class="container">
        <h1 class="text-center m-5">Artiste {{ artist.firstname }} {{ artist.lastname }}</h1>
        <div class="admin-section pt-5 pb-5 px-5">
            <table class="table">
                <tbody>
                <tr>
                    <th>Nom</th>
                    <td>{{ artist.lastname }}</td>
                </tr>
                <tr>
                    <th>Prénom</th>
                    <td>{{ artist.firstname }}</td>
                </tr>
                <tr>
                    <th>Photo</th>
                    <td><img src="{% if artist.imageName is empty %}
                    {{ asset('build/acrobat.jpg') }}
                      {% else %}
                    {{ vich_uploader_asset(artist, 'imageFile') }}
                    {% endif %}"
                             alt="{{ artist.firstname }}" class="w-25"></td>
                </tr>
                <tr>
                    <th>Date de naissance</th>
                    <td>{{ artist.birthday ? artist.birthday|date('Y-m-d') : '' }}</td>
                </tr>
                <tr>
                    <th>Rôle</th>
                    <td>{{ artist.role }}</td>
                </tr>
                </tbody>
            </table>
            <div class="d-flex justify-content-center">
                <a href="{{ path('admin_artist_edit', {'id': artist.id}) }}"
                   class="btn btn-outline-danger">Modifier</a>
            </div>
        </div>
        <div class="d-flex justify-content-around">
            <a href="{{ path('admin_artist_index') }}" class="btn btn-dark m-5">Liste des artistes</a>

            {{ include('artist/_delete_form.html.twig') }}
        </div>
    </div>
{% endblock %}
